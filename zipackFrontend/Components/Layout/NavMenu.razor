<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zipack</title>
    <link rel="stylesheet" href="assets/fonts/font.css">
    <link rel="stylesheet" href="index.css" />
    <link href="assets/download/animate.css-main/animate.min.css" rel="stylesheet">
    <link href="assets/download/Hover-master/css/hover-min.css" rel="stylesheet">
</head>
<body>
<div class="main-container">
    <!-- Die Navigationsleiste bleibt immer oben -->
    <div class="rectangle">
        <span class="zipack">zipack</span>
        <a href="/" class="home nav-link">Home</a>
        <a href="/news" class="legal nav-link">News</a>
        <a href="/releases" class="releases nav-link">Releases</a>
        <a href="/Team" class="latest nav-link">Team</a>
        <a href="/legal" class="legal nav-link">Legal</a>
        <!-- Download Button -->
        <div class="text-center mt-8 relative group">
            <button class="download-button">
                Download
            </button>
            <!-- Unsichtbarer Link -->
            <a href="/download" class="absolute inset-0" aria-label="Download"></a>
        </div>
        <div class="line"></div>
    </div>
    

    <!-- Der restliche Inhalt deiner Seite -->
    <div class="content">
        <!-- Deine anderen Sektionen hier -->
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const currentPath = window.location.pathname; // Aktueller Pfad der Seite
        const navLinks = document.querySelectorAll(".nav-link");

        // Setze die aktive Klasse entsprechend des aktuellen Pfads
        navLinks.forEach((link) => {
            if (link.getAttribute("href") === currentPath) {
                link.classList.add("active");
            }
        });
    });
</script>
</body>
</html>