<!DOCTYPE html>
<html lang="en">
<body>
<div class="main-container">
    <!-- Die Navigationsleiste bleibt immer oben -->
    <div class="rectangle">
        <a href="/" class="zipack">zipack</a>
        
        <a href="/" class="button hvr-grow">
            Home
        </a>
        <a href="/news" class="button hvr-grow">
            News
        </a>
        <a href="/releases" class="button hvr-grow">
            Releases
        </a>
        <a href="/team" class="button hvr-grow">
            Team
        </a>
        <a href="/legal" class="button hvr-grow">
            Legal
        </a>

        <!-- Download Button -->
        <div class="text-center mt-8 relative group">
            <button class="download-button">
                Download
            </button>
            <!-- Unsichtbarer Link -->
            <a href="/download" class="absolute inset-0" aria-label="Download"></a>
        </div>
        <div class="line"></div>
    </div>
    

    <!-- Der restliche Inhalt deiner Seite -->
    <div class="content">
        <!-- Deine anderen Sektionen hier -->
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const currentPath = window.location.pathname; // Aktueller Pfad der Seite
        const navLinks = document.querySelectorAll(".nav-link");

        // Setze die aktive Klasse entsprechend des aktuellen Pfads
        navLinks.forEach((link) => {
            if (link.getAttribute("href") === currentPath) {
                link.classList.add("active");
            }
        });
    });
</script>
</body>
</html>