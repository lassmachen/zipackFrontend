@page "/legal"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Legal | Zipack</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white font-sans">

<!-- Header Section -->
<header class="relative w-full h-screen flex flex-col items-center justify-center bg-black">
    <h1 class="animate__animated animate__fadeInDownBig">
    <div class="text-center">
        <h1 class="text-8xl font-[Staatliches] tracking-wider text-white">
            Legal
        </h1>
        <p class="mt-4 text-xl font-[Sulphur Point] text-gray-300">
            Transparency and trust, all in one place.
        </p>
    </div>
    </h1>
</header>

<!-- Content Section -->
<main class="py-16">
    <section id="support" class="text-center py-12 bg-gray-900">
        <h2 class="text-5xl font-[Staatliches] text-purple-500">Support</h2>
        <p class="mt-4 text-lg font-[Sulphur Point] text-gray-300">
            Need assistance? Our team is here to help you anytime.
        </p>
        <a href="/support" class="mt-6 inline-block bg-purple-600 text-white px-8 py-3 rounded-lg text-lg font-[Sulphur Point] hover:bg-purple-700 transition">
            Get Support
        </a>
    </section>

    <section id="contact" class="text-center py-12 bg-black">
        <h2 class="text-5xl font-[Staatliches] text-purple-500">Contact</h2>
        <p class="mt-4 text-lg font-[Sulphur Point] text-gray-300">
            Reach out to us with your queries or feedback.
        </p>
        <a href="/contact" class="mt-6 inline-block bg-purple-600 text-white px-8 py-3 rounded-lg text-lg font-[Sulphur Point] hover:bg-purple-700 transition">
            Contact Us
        </a>
    </section>

    <section id="imprint" class="text-center py-12 bg-gray-900">
        <h2 class="text-5xl font-[Staatliches] text-purple-500">Imprint</h2>
        <p class="mt-4 text-lg font-[Sulphur Point] text-gray-300">
            Explore all the legal details and company information here.
        </p>
        <a href="/imprint" class="mt-6 inline-block bg-purple-600 text-white px-8 py-3 rounded-lg text-lg font-[Sulphur Point] hover:bg-purple-700 transition">
            View Imprint
        </a>
    </section>
</main>

<!-- Footer Section -->
<footer class="bg-black py-8 text-center text-gray-400">
    <p>&copy; 2025 Zipack. All rights reserved.</p>
    <div class="mt-4 flex justify-center space-x-6">
        <a href="/download" class="hover:text-purple-500">Download</a>
        <a href="/contact" class="hover:text-purple-500">Contact</a>
        <a href="/support" class="hover:text-purple-500">Support</a>
        <a href="/team" class="hover:text-purple-500">Team</a>
        <a href="https://ko-fi.com/einfachrobbe" target="_blank" class="hover:text-[#802BB1]">
            Donate
        </a>
        <a href="/imprint" class="hover:text-purple-500">Imprint</a>
        
    </div>
</footer>

</body>
</html>

