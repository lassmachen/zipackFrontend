<body class="font-sans bg-black">


<div class="w-full h-[100px] bg-black"></div>

<div class="relative w-full mx-auto">
    <!-- Image Section Above "File Manager" -->
    <div class="relative w-full h-[200px] bg-black">
        <div class="absolute w-full h-full bg-cover bg-center rounded-lg" style="background-image: url('./assets/images/zipacklogo.png'); background-size: contain; background-repeat: no-repeat; background-position: center;"></div>
    </div>

    <!-- Main Section -->
    <div class="text-center py-12" id="textContainer">
        <h1 class="animate__animated animate__zoomIn">
            <a class="button hvr-grow">
                <div class="bg-white mx-auto px-6 py-4 max-w-4xl rounded-lg">
                    <h1 class="text-[36px] font-staatliches tracking-[3px]">ALL in one</h1>
                    <h2 class="text-[36px] font-staatliches tracking-[3px]">File Manager</h2>
                </div>
