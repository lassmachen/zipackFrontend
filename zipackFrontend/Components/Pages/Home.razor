@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zipack</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Staatliches:wght@400&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sulphur+Point:wght@400&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Racing+Sans+One:wght@400&display=swap" />
</head>
<body class="font-sans bg-white">
<div class="relative w-full mx-auto">
    <!-- Image Section Above "File Manager" -->
    <div class="relative w-full h-[330px]">
        <div class="absolute w-full h-full bg-cover bg-center rounded-lg" style="background-image: url('./assets/images/zipacklogo.png'); background-size: contain;"></div>
    </div>

    <!-- Main Section -->
    <div class="text-center py-20">
        <h1 class="text-[48px] font-[Staatliches] tracking-[5.76px]">ALL in one</h1>
        <h2 class="text-[48px] font-[Staatliches] tracking-[5.76px]">File Manager</h2>
    </div>

    <!-- Image Section Below "File Manager" -->
    <div class="relative w-full h-[750px]">
        <div class="absolute w-full h-full bg-cover bg-center rounded-lg" style="background-image: url('./assets/images/200+.png'); background-size: 100% 100%;"></div>
    </div>

    <!-- Features Section (Easy & Fast) -->
    <div class="bg-white py-16">
        <div class="flex justify-between items-center px-6 md:px-12 lg:px-24">
            <div>
                <h3 class="text-black text-[48px] font-[Staatliches] tracking-[5.76px] md:text-[72px] lg:text-[96px]">Easy</h3>
                <h3 class="text-black text-[48px] font-[Staatliches] tracking-[5.76px] md:text-[72px] lg:text-[96px]"> & fast</h3>
            </div>
            <div class="w-[743px] h-[430px] bg-cover bg-center rounded-lg" style="background-image: url('./assets/images/openerPNG.PNG'); background-size: 100% 100%;"></div>
        </div>
    </div>

    <!-- Manage Your Files Section -->
    <div class="bg-black text-white py-16">
        <div class="text-center px-6">
            <h3 class="text-[48px] font-[Staatliches] tracking-[5.76px] leading-tight md:text-[72px] lg:text-[96px]">
                Manage your Files
            </h3>
        </div>
        <div class="w-[743px] h-[487px] bg-cover bg-center rounded-lg mx-auto mt-8" style="background-image: url('./assets/images/Files.PNG'); background-size: cover;"></div>
    </div>

    <!-- Be Updated Section -->
    <div class="bg-white py-16">
        <div class="text-center px-6">
            <h3 class="text-black text-[48px] font-[Staatliches] tracking-[5.76px] md:text-[72px] lg:text-[96px]">Be updated</h3>
            <p class="text-[24px] font-[Sulphur Point] mt-4">Stay up to date with the latest features and improvements.</p>
        </div>
    </div>

    <!-- Customizable Section -->
    <div class="bg-black text-white py-16">
        <div class="text-center px-6">
            <h3 class="text-[48px] font-[Staatliches] tracking-[5.76px] leading-tight md:text-[72px] lg:text-[96px]">
                customizable<br />& professional
            </h3>
        </div>
        <!-- Marketplace Image Below the Text -->
        <div class="w-[743px] h-[487px] bg-cover bg-center rounded-lg mx-auto mt-8" style="background-image: url('./assets/images/Marketplace.png'); background-size: contain;"></div>
        <div class="text-center mt-10">
            <button class="bg-purple-600 text-white text-[40px] font-[Sulphur Point] px-8 py-2 rounded-lg">
                Download
            </button>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="bg-black text-white py-10 px-6">
        <div class="text-center">
            <div class="mb-4">
                <h4 class="text-lg mb-2">Impressum</h4>
                <ul class="space-y-2">
                    <li>Contact</li>
                    <li>Help</li>
                </ul>
            </div>
            <div class="border-t border-white pt-4">
                <h4 class="text-lg mb-2">Download</h4>
                <ul class="space-y-2">
                    <li>Team</li>
                    <li>Donate</li>
                </ul>
            </div>
            <div class="mt-4">
                <p>All Rights Reserved</p>
            </div>
        </div>
    </footer>
</div>
</body>
</html>

