            <h1 class="animate__animated animate__slideInRight">
                <div class="w-[500px] h-[300px] bg-cover bg-center rounded-lg transform transition duration-300 hover:scale-110"
                     style="background-image: url('./assets/images/openerPNG.PNG'); background-size: 100% 100%;">
                </div>
            </h1>
        </div>
    </div>

    <!-- Manage Your Files Section -->
    <div class="bg-black text-white py-10">
        <div class="text-center px-6">
            <h3 class="text-[36px] font-staatliches tracking-[3px] leading-tight">
                Manage your Files
            </h3>
        </div>
        <h1 class="animate__animated animate__slideInLeft">
            <div class="w-[500px] h-[300px] bg-cover bg-center rounded-lg mx-auto mt-6 transform transition duration-300 hover:scale-110"
                 style="background-image: url('./assets/images/Files.PNG'); background-size: 100% 100%;">
            </div>
        </h1>
    </div>

    <!-- Be Updated Section -->
    <div class="bg-white py-10">
        <div class="text-center px-6">
            <h3 class="text-black text-[36px] font-staatliches tracking-[3px]">Be updated</h3>
            <p class="text-[18px] font-sulphur-point mt-4">Stay up to date with the latest features and improvements.</p>
        </div>
    </div>

    <!-- Customizable Section -->
    <div class="bg-black text-white py-10">
        <div class="text-center px-6">
            <h3 class="text-[36px] font-staatliches tracking-[3px] leading-tight">
                Customizable<br/>& professional
            </h3>
        </div>
        <h1 class="animate__animated animate__slideInRight">
            <div class="w-[500px] h-[300px] bg-cover bg-center rounded-lg mx-auto mt-6 transform transition duration-300 hover:scale-110"
                 style="background-image: url('./assets/images/Marketplace.png'); background-size: 100% 100%;">
            </div>
        </h1>
        <div class="text-center mt-8 relative group">
            <button class="bg-[#802BB1] text-white text-[20px] font-sulphur-point px-6 py-2 rounded-lg transition duration-300 ease-in-out transform group-hover:scale-110 group-hover:bg-[#9c3cbb]">
