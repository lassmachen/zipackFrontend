    <!-- Footer Section -->
    <footer class="bg-black py-8 text-center text-gray-400">
        <p>&copy; 2025 Zipack. All rights reserved.</p>
        <div class="mt-4 flex justify-center space-x-6">
            <a href="/download" class="hover:text-[#802BB1]">Download</a>
            <a href="/contact" class="hover:text-[#802BB1]">Contact</a>
            <a href="/support" class="hover:text-[#802BB1]">Support</a>
            <a href="/team" class="hover:text-[#802BB1]">Team</a>
            <a href="/donate" class="hover:text-[#802BB1]">
                Donate
            </a>
            <a href="/imprint" class="hover:text-[#802BB1]">Imprint</a>
        </div>
    </footer>
</div>

</body>

<script>
    let isExpanded = false; // Zustand des Containers

    function toggleContainer() {
        const textContainer = document.getElementById("textContainer");

        if (!isExpanded) {
            textContainer.innerHTML = `
                <div class="bg-white mx-auto px-6 py-4 max-w-xl rounded-lg animate__animated animate__fadeIn">
                    <h1 class="text-[28px] font-staatliches tracking-[3px]">Zipack is more than just an archiving program – it is the future of file management.</h1>
                    <p class="text-[16px] mt-4">
                        With Zipack, you only need one software to handle almost any file format. No more chaos from multiple applications for your files: Zipack combines nearly everything you need into a single, modern application. Whether you are a professional or a beginner, Zipack is easy to use and the number one choice for file management.
                    </p>
                    <p class="text-[16px] mt-4">
                        The modular core structure offers seamless integration of third-party add-ons developed and uploaded by professionals. Our marketplace ensures you find the perfect solution for your file processing needs.
                    </p>
                    <p class="text-[16px] mt-4">
                        Zipack is developed by a passionate team dedicated to continuous improvement. The project is completely open-source and thrives on community support. Donations are essential to cover server costs and further development, enabling Zipack to fulfill its vision of universal file management.
                    </p>
                 
                    <h2 class="text-[20px] font-staatliches tracking-[3px] mt-6">Zipack – Simple. Flexible. Expandable.</h2>
                </div>
            `;
        } else {
            // Wenn der Container bereits geöffnet ist, setzen wir ihn zurück
            textContainer.innerHTML = `
                <h1 class="animate__animated animate__zoomIn">
                    <a class="button hvr-grow">
                        <div class="bg-white mx-auto px-6 py-4 max-w-4xl rounded-lg">
                            <h1 class="text-[36px] font-staatliches tracking-[3px]">ALL in one</h1>
                            <h2 class="text-[36px] font-staatliches tracking-[3px]">File Manager</h2>
                        </div>
                    </a>
                </h1>
            `;
        }

        isExpanded = !isExpanded; // Zustand umschalten
    }

    // Fügen Sie den Event-Listener beim Laden der Seite hinzu
    window.onload = function() {
        document.getElementById("textContainer").addEventListener("click", toggleContainer);
    };
</script>

</html>
