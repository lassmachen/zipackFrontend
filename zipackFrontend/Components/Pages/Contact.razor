@page "/contact"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Contact | Zipack</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white">

<!-- Hero Section with Background -->
<div class="relative w-full h-screen bg-cover bg-center" style="background-image: url('./assets/images/zipacklogo_.png');">
    <div class="absolute w-full h-full bg-black opacity-80 z-0"></div>

    <!-- Centered White Box -->
    <div class="absolute w-[90%] max-w-[800px] h-[500px] top-[50%] left-[50%] transform -translate-x-[50%] -translate-y-[50%] bg-white rounded-3xl shadow-xl z-1 p-8">
        <span class="block text-center text-[50px] lg:text-[80px] font-[Staatliches] text-black leading-tight tracking-[6px] z-2">
            Contact
        </span>

        <!-- Contact Information -->
        <div class="text-center text-[18px] lg:text-[20px] font-[Staatliches] text-black mt-6 z-3 space-y-4">
            <p class="text-gray-700">
                If you have any questions or need assistance, feel free to reach out. <br />
                Email us at <a href="mailto:contactt@zipack.net" class="text-purple-600 hover:text-purple-500 transition-colors">contact@zipack.net</a>
            </p>
            <p class="text-gray-700">
                Please provide a brief description of your inquiry in the subject line. Our team will get back to you shortly.
            </p>

            <!-- Contact Us Button -->
            <div class="text-center mt-6">
                <a href="mailto:contactt@zipack.net" class="inline-block py-3 px-8 bg-gradient-to-r from-purple-600 via-purple-500 to-purple-600 text-white text-[18px] font-semibold rounded-lg shadow-lg transform hover:scale-105 transition-all duration-300">
                    Contact Us
                </a>
            </div>
        </div>
    </div>
</div>

</body>
</html>
