@page "/team"

<body class="bg-gray-900 text-white min-h-screen flex items-center justify-center pt-16">

<PageTitle>Team | zipack.net</PageTitle>

<!-- Outer Container for padding top -->
<div class="container mx-auto px-4">

    <!-- Inner Container with additional padding -->
    <div class="pt-16">
        <!-- Header Section -->
        <header class="text-center mb-8">
            <h1 class="text-3xl lg:text-5xl font-staatliches mb-4">
                Meet Our Team
            </h1>
            <p class="text-lg lg:text-xl font-sulphur-point text-gray-300">
                Learn more about the passionate people behind the project.
            </p>
        </header>
    </div>

    <!-- Team Members Section -->
    <h1 class="animate__animated animate__slideInUp">
        <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Team Member 1 -->
            <a href="https://einfachrobbe.de" class="button hvr-float">
                <div class="bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow p-4">
                    <div class="flex flex-col items-center space-y-4">
                        <img
                            src="/assets/images/pfpeinfachrobbe.png"
                            alt="EinfachRobbe"
                            class="w-28 h-28 rounded-full border-4 border-white object-cover"/>
                        <div>
                            <h2 class="text-lg font-bold text-center">EinfachRobbe</h2>
                            <p class="text-sm text-gray-400 text-center">CEO <br/>Developer <br/>Administration <br/>Payrole</p>
                        </div>
                        <p class="mt-4 text-gray-300 text-center">
                            Can't live without his goofy ahh type music. General dogsbody of zipack.
                        </p>
                    </div>
                </div>
            </a>

            <!-- Team Member 2 -->
            <a href="#" class="button hvr-float">
                <div class="bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow p-4">
                    <div class="flex flex-col items-center space-y-4">
                        <img
                            src="/assets/images/pfpsupgraf.png"
                            alt="SupGraf"
                            class="w-28 h-28 rounded-full border-4 border-white object-cover"/>
                        <div>
                            <h2 class="text-lg font-bold text-center">SupGraf</h2>
                            <p class="text-sm text-gray-400 text-center">Founder <br/>CEO <br/>Designer <br/>Manager</p>
                        </div>
                        <p class="mt-4 text-gray-300 text-center">
                            He always has an idea whether it's for a design, a project, or a new way to accidentally become rich.
                        </p>
                    </div>
                </div>
            </a>

            <!-- Team Member 3 -->
            <a href="#" class="button hvr-float">
                <div class="bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow p-4">
                    <div class="flex flex-col items-center space-y-4">
                        <img
                            src="/assets/images/pfpKaya.png"
                            alt="Kaya"
                            class="w-28 h-28 rounded-full border-4 border-white object-cover"/>
                        <div>
                            <h2 class="text-lg font-bold text-center">Kaya</h2>
                            <p class="text-sm text-gray-400 text-center">FX-Designer <br/>Supporter <br/>Sound Designer <br/>Pappaplatte Viewer</p>
                        </div>
                        <p class="mt-4 text-gray-300 text-center">
                            Ever heard a weird sound? He makes it with his mouth while watching Pappaplatte stream.
                        </p>
                    </div>
                </div>
            </a>
        </section>
    </h1>
</div>


</body>
