@page "/releases"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Generated by Codia AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom Fonts */
        .font-staatliches {
            font-family: 'Staatliches', sans-serif;
        }
        .font-sulphur {
            font-family: 'Sulphur Point', sans-serif;
        }

        /* Hover effect for the black container */
        .hover-grow {
            transition: transform 0.5s ease; /* Smooth transition */
        }

        .hover-grow:hover {
            transform: scale(1.1); /* Makes the container 10% bigger in both directions */
        }

        /* Make the link fill the entire container */
        .link-container {
            display: block;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

<div class="relative flex flex-col items-center">
    <!-- Releases Title (Wide and above the container) -->
    <span class="text-black font-staatliches text-4xl md:text-6xl lg:text-7xl leading-tight mb-2 w-[300px] text-center">
        Releases
    </span>

    <!-- Wrap the container in a link -->
    <h1 class="animate__animated animate__zoomIn">
    <a href="/download" class="link-container">
        <!-- Black Rectangle with hover effect and rounded corners (keeps square aspect) -->
        <div class="w-[300px] h-[300px] bg-black overflow-auto p-6 hover-grow rounded-xl flex flex-col items-center justify-center">
            <!-- Beta Version Text -->
            <span class="block text-white font-staatliches text-3xl md:text-4xl lg:text-5xl text-center my-4">
                Alpha Version
            </span>

            <!-- V1.0.0 - Tested Text -->
            <span class="block text-white font-sulphur text-lg md:text-xl lg:text-2xl text-center">
                V1.0.0 - Untested
            </span>
        </div>
    </a>
    </h1>
</div>

</body>
</html>
